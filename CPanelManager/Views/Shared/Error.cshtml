@model CPanelManager.ViewModels.ErrorMessageViewModel;
@{
    ViewData["Title"] = "Error";
}



<!-- widget grid -->
<section id="widget-grid" class="">

    <!-- row -->
    <div class="row">

        <!-- NEW WIDGET START -->
        <article class="col-sm-12">
            <div class="alert alert-danger fade in">
                <button class="close" data-dismiss="alert">
                    ×
                </button>

                <h4><i class="fa-fw fa fa-exclamation-triangle"></i> Error.</h4> <h6>An unexpected error has occurred while processing your request. Please contact the system administrator.</h6>
            </div>

            @if (Model != null)
            {
                <div>
                    <p>
                        <b>Exception:</b> @Model.Exception.Message<br />
                        <b>Controller:</b> @Model.Controler<br />
                        <b>Action:</b> @Model.ActionResult
                    </p>
                    <div style="overflow: scroll">
                        <pre>
                            @Model.Exception.StackTrace
                        </pre>
                    </div>
                </div>
            }

        </article>
        <!-- WIDGET END -->

    </div>

    <!-- end row -->
</section>
