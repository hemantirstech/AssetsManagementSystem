@model CPanelManager.ViewModels.MasterSubCategory.IndexMasterSubCategoryViewModel

@{
    ViewData["Title"] = "MasterSubCategory/Index";
}

<!-- MAIN CONTENT -->
    <div id="content">

        <!--Modal Header Start-->
        <div class="modal-header">
            <h4 class="modal-title">Add User</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
        </div>
        <!--Modal Header End-->



        <form asp-action="DeleteMasterSubCategory" id="MasterSubCategory-form" novalidate="novalidate" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
                    <h1 class="page-title txt-color-blueDark">
                        <i class="fa fa-edit fa-fw "></i>
                        Master SubCategory
                        <span>
                            >
                            Index
                        </span>
                    </h1>
                </div>
                <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8" style="text-align:right;padding-top:10px;">
                    <a asp-action="PrintMasterSubCategory" asp-controller="MasterSubCategory" class="btn btn-lg btn-labeled btn-default" target="_blank">
                        <span class="btn-label"><i class="glyphicon glyphicon-print"></i></span>Print
                    </a>
                    @*<button id="btndelete" type="submit" class="btn btn-lg btn-labeled btn-danger" onclick="return confirm('Are you sure you wish to delete Master SubCategory?');">
                        <span class="btn-label"><i class="glyphicon glyphicon-trash"></i></span>Delete
                    </button>*@

                    <a asp-action="AddMasterSubCategory" asp-controller="MasterSubCategory" class="btn btn-lg btn-labeled btn-primary">
                        <span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span>Add New
                    </a>
                </div>
            </div>



            <!-- widget grid -->
            <section id="widget-grid" class="">

                <!-- START ROW -->
                <div class="row">

                    <!-- NEW COL START -->
                    <article class="col-sm-12 col-md-12 col-lg-12">

                        <!-- Widget ID (each widget will need unique ID)-->
                        <div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-collapsed="false" data-widget-togglebutton="false" data-widget-sortable="false">

                            <header>
                                <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                                <h2>MasterSubCategory </h2>

                            </header>

                            <!-- widget div-->
                            <div>

                                <!-- widget edit box -->
                                <div class="jarviswidget-editbox">
                                    <!-- This area used as dropdown edit box -->

                                </div>
                                <!-- end widget edit box -->
                                <!-- widget content -->
                                <div class="widget-body no-padding">

                                    <table id="dt_basic" class="table table-hover" width="100%">
                                        <thead>
                                            <tr>
                                                <th data-hide="phone" style="width:4%"><input style="width:100% !important; text-align:center;" type="checkbox" class="checkBoxDelete" id="chkbtnDeleteAll" /> </th>
                                                <th data-class="expand" style="width:15%"> Category</th>
                                                <th data-class="expand" style="width:19%"> Sub Category</th>
                                                <th data-hide="phone,tablet" style="width:7%;text-align:center;"> Total</th>
                                                <th data-hide="phone,tablet" style="width:7%;text-align:center;"> Assign</th>
                                                <th data-hide="phone,tablet" style="width:7%;text-align:center;"> Repair</th>
                                                <th data-hide="phone,tablet" style="width:7%;text-align:center;"> Expire</th>
                                                <th data-hide="phone,tablet" style="width:7%;text-align:center;"> Sale</th>
                                                <th data-hide="phone,tablet" style="width:7%;text-align:center;"> Dead</th>
                                                <th data-hide="phone,tablet" style="width:8%;text-align:right;"> Cost</th>
                                                <th data-hide="phone" style="width:14%;text-align:center;">Action</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var Item in Model.MasterSubCategoryList)
                                            {
                                                <tr>
                                                    <td style="text-align:center;"><input style="float:inherit;" type="checkbox" id="chkbtnDeleteMasterSubCategoryIds" class="checkBoxDelete" name="DeleteMasterSubCategoryIds" value="@Item.MasterSubCategoryId"> </td>
                                                    <td>@Item.CategoryTitle</td>
                                                    @if (Model.IsUpdate == true)
                                                    {
                                                        <td>
                                                            @Html.ActionLink(Item.SubCategoryTitle, "ViewMasterSubCategory", "MasterSubCategory", new { MasterSubCategoryId = Item.MasterSubCategoryId }, htmlAttributes: new { id = "loginLink" })
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>
                                                            @Html.ActionLink(Item.SubCategoryTitle, "ViewMasterSubCategory", "MasterSubCategory", new { MasterSubCategoryId = Item.MasterSubCategoryId }, htmlAttributes: new { id = "loginLink" })
                                                        </td>
                                                    }

                                                    <td style="text-align: center;">@Item.TotalAssetsInStock</td>
                                                    <td style="text-align: center;">@Item.AssetsAssign</td>
                                                    <td style="text-align: center;">@Item.AssetsInRepair</td>
                                                    <td style="text-align: center;">@Item.ServiceInExpire</td>
                                                    <td style="text-align: center;">@Item.AssetsInSold</td>
                                                    <td style="text-align: center;">@Item.AssetsInDead</td>
                                                    <td style="text-align: right;">@Item.TotalAssetsCost</td>

                                                    <td style="text-align:center;">
                                                        @Html.ActionLink(".", "ViewMasterSubCategory", "MasterSubCategory", new { MasterSubCategoryId = Item.MasterSubCategoryId }, htmlAttributes: new { id = "loginLink", @class = "glyphicon glyphicon-pencil", style = "color:blue;font-size:15px;" })

                                                        @Html.ActionLink(".", "DeleteMasterSubCategoryById", "MasterSubCategory", new { MasterSubCategoryId = Item.MasterSubCategoryId }, htmlAttributes: new { id = "loginLink", @class = "glyphicon glyphicon-trash", style = "color:red;font-size:15px;", onclick = "return confirm('Are you sure you wish to delete Master SubCategory?');" })
                                                        @Html.ActionLink(".", "IndexDetailMasterProductChild", "MasterProduct", new { MasterSubCategoryId = Item.MasterSubCategoryId }, htmlAttributes: new { id = "loginLink", @class = "glyphicon glyphicon-list", style = "color:blue;font-size:15px;" })

                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                                <!-- end widget content -->

                            </div>
                            <!-- end widget div -->

                        </div>
                        <!-- end widget -->

                    </article>
                    <!-- END COL -->

                </div>
                <!-- END ROW -->
            </section>
            <!-- end widget grid -->
        </form>


        <!--Modal Footer Start-->
        <div class="modal-footer">
            <button data-dismiss="modal" id="cancel" class="btn btn-default" type="button">Cancel</button>
            <button class="btn btn-success relative" id="btnSubmit" type="submit">
                <i class="loader"></i>
                Submit
            </button>
        </div>
        <!--Modal Footer End-->


    </div>

@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {
            //Check Btn On Index View  for Select all check boxs for Delete
            $("#chkbtnDeleteAll").click(function () {
                $(".checkBoxDelete").prop('checked', $(this).prop('checked'));
            });
        });
    </script>
    <script src="~/js/Views/MasterSubCategory/Index.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



