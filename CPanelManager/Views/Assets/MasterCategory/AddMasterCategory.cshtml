@model CPanelManager.ViewModels.MasterCategory.AddMasterCategoryViewModel

@{
    ViewData["Title"] = "Master Category";
}


<!-- MAIN CONTENT -->
<div id="content">


    <form asp-action="SaveMasterCategory" id="MasterCategory-form" novalidate="novalidate" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
                <h1 class="page-title txt-color-blueDark">
                    <i class="fa fa-edit fa-fw "></i>
                    Master Category
                    <span>
                        >
                        View
                    </span>
                </h1>
            </div>
            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8" style="text-align:right;padding-top:10px;">

                <input type="hidden" asp-for="MasterCategoryId" />
                <input type="hidden" asp-for="Mode" />

                <a asp-action="Index" class="btn btn-lg btn-labeled btn-danger">
                    <span class="btn-label"><i class="glyphicon glyphicon-remove"></i></span>Cancel
                </a>

                <button id="btnsave" type="submit" class="btn btn-lg btn-labeled btn-primary">
                    <span class="btn-label"><i class="glyphicon glyphicon-floppy-disk"></i></span>Save / Update
                </button>
            </div>
        </div>
               

        <div class="alert alert-block alert-success">
            <a class="close" data-dismiss="alert" href="#">×</a>
            <h4 class="alert-heading"><i class="fa fa-check-square-o"></i> Check validation!</h4>
            <p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </p>
        </div>


        <!-- widget grid -->
        <section id="widget-grid" class="">

            <!-- START ROW -->
            <div class="row">

                <!-- NEW COL START -->
                <article class="col-sm-12 col-md-12 col-lg-7">

                    <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-collapsed="false" data-widget-togglebutton="false" data-widget-sortable="false">

                        @*<header>
                                <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                                <h2>Company Detail </h2>

                            </header>*@

                        <!-- widget div-->
                        <div>

                            <!-- widget edit box -->
                            <div class="jarviswidget-editbox">
                                <!-- This area used as dropdown edit box -->

                            </div>
                            <!-- end widget edit box -->
                            <!-- widget content -->
                            <div class="widget-body no-padding">

                                <div class="smart-form" novalidate="novalidate">
                                    <header>
                                        Category Detail
                                    </header>

                                    <fieldset>

                                        <section>
                                            <label class="label">Category</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-tag"></i>
                                                <input asp-for="CategoryTitle" placeholder="Category Title" maxlength="100" oninput="this.value = this.value.toUpperCase()" />
                                                <span asp-validation-for="CategoryTitle" class="text-danger"></span>
                                            </label>
                                        </section>
                                        
                                        <div class="row">
                                            <section class="col col-6">
                                                <label class="label">Category Colour</label>
                                                <label class="input">
                                                    <i class="icon-prepend fa fa-tag"></i>
                                                    <input asp-for="CategoryCode" placeholder="Category Colour Code" maxlength="100"  />
                                                    <span asp-validation-for="CategoryCode" class="text-danger"></span>
                                                </label>
                                            </section>

                                            <section class="col col-6">
                                                <label class="label">Category Icon</label>
                                                <label class="input">
                                                    <i class="icon-prepend fa fa-tag"></i>
                                                    <input asp-for="CategoryImage" placeholder="Category Icon" maxlength="100" />
                                                    <span asp-validation-for="CategoryImage" class="text-danger"></span>
                                                </label>
                                            </section>
                                        </div>

                                        <section>
                                            <label class="label"> Category Description</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-tag"></i>
                                                <input asp-for="MasterCategoryDescription" placeholder="MasterCategory Description" maxlength="100" />
                                                <span asp-validation-for="MasterCategoryDescription" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <div class="row">
                                            <section class="col col-6">
                                                <label class="label">Sequence</label>
                                                <label class="input">
                                                    <i class="icon-prepend fa fa-tag"></i>
                                                    <input asp-for="Sequence" placeholder="Sequence" maxlength="5" onkeypress="javascript: return isIntegerNumberKey(event)" />
                                                    <span asp-validation-for="Sequence" class="text-danger"></span>
                                                </label>
                                            </section>
                                            <section class="col col-3">
                                                <label class="label">Type</label>
                                                <label class="toggle">
                                                    <input type="checkbox" id="MasterCategoryType" name="MasterCategoryType" value="1" checked="checked">
                                                    <i data-swchon-text="Assets" data-swchoff-text="Service"></i>
                                                </label>
                                                <span asp-validation-for="MasterCategoryType" class="text-danger"></span>
                                            </section>
                                            <section class="col col-3">
                                                <label class="label">Active</label>
                                                <label class="toggle">
                                                    <input type="checkbox" id="IsActive" name="IsActive" value="true" checked="checked">
                                                    <i data-swchon-text="True" data-swchoff-text="False"></i>
                                                </label>
                                                <span asp-validation-for="IsActive" class="text-danger"></span>
                                            </section>
                                        </div>

                                    </fieldset>

                                </div>

                            </div>
                            <!-- end widget content -->

                        </div>
                        <!-- end widget div -->

                    </div>
                    <!-- end widget -->
                    <!-- Widget ID (each widget will need unique ID)-->
                    <!-- end widget -->
                </article>
                <!-- END COL -->
                <!-- NEW COL START -->
                <article class="col-sm-12 col-md-12 col-lg-5">


                    <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget" id="wid-id-2" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-collapsed="false" data-widget-togglebutton="false" data-widget-sortable="false">

                        @*<header>
                                <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                                <h2>Registration Detail </h2>
                            </header>*@

                        <!-- widget div-->
                        <div>

                            <!-- widget edit box -->
                            <div class="jarviswidget-editbox">
                                <!-- This area used as dropdown edit box -->

                            </div>
                            <!-- end widget edit box -->
                            <!-- widget content -->
                            <div class="row">
                                <div class="col-sm-12">

                                    <div class="well">
                                        <button class="close" data-dismiss="alert">
                                            ×
                                        </button>
                                        <h1 class="semi-bold">Master Category </h1>
                                        <p>
                                            Master Category is to add the new category of the product which we can use while adding the new asset or product.
                                        </p>


                                    </div>

                                </div>
                            </div>
                            <!-- end widget content -->

                        </div>
                        <!-- end widget div -->

                    </div>
                    <!-- end widget -->


                </article>
                <!-- END COL -->

            </div>
            <!-- END ROW -->


        </section>
        <!-- end widget grid -->
    </form>
</div>

@section Scripts {

    <script type="text/javascript">
        var IsActive = "@Model.IsActive";

        if (IsActive == "True") {
            $('#IsActive').prop('checked', true);
        }
        else {
            $('#IsActive').prop('checked', false);
        }


        var MasterCategoryType = "@Model.MasterCategoryType";

        if (MasterCategoryType == "1") {
            $('#MasterCategoryType').prop('checked', true);
        }
        else {
            $('#MasterCategoryType').prop('checked', false);
        }






    </script>


    <script src="~/js/Views/MasterCategory/AddMasterCategory.js"></script>


    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


