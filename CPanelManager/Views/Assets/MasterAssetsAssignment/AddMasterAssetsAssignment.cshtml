@section Scripts {

    <script type="text/javascript">
        
        DropDownFill();
        
        $("#MasterCategoryId").change(function () {
            DropDownFill();
        })

        $("#MasterBranchId").change(function () {
            DropDownFill();
        })

        function DropDownFill() {
            //Sub Category
            $("#MasterSubCategoryId").prop('disabled', true);
            var url = "/Common/AssetsDropDownFill";
            var _Category = $("#MasterCategoryId").val();
            var _SubCategory = "@Model.MasterSubCategoryId";

            var data = [];
            $.getJSON(url, { TableName: "ASMasterSubCategory", MasterId: _Category, Type: 'CID'}, function (data) {

                data = $.parseJSON(data)
                FillDropdown("MasterSubCategoryId", data)

                if (data.length >= 1) {
                    $("#MasterSubCategoryId").prop('disabled', false);
                    $("#MasterSubCategoryId").val(_SubCategory).attr("selected", true);
                }
                else {
                    $("#MasterSubCategoryId").prop('disabled', true);
                }
            });


            //Employee
            $("#MasterEmployeeId").prop('disabled', true);
            var url = "/Common/DropDownFill";
            var _Branch = $("#MasterBranchId").val();
            var _Employee = "@Model.MasterEmployeeId";

            var data = [];
            $.getJSON(url, { TableName: "ADMasterEmployee", MasterId: _Branch, Type: 'BID'}, function (data) {

                data = $.parseJSON(data)
                FillDropdown("MasterEmployeeId", data)

                if (data.length >= 1) {
                    $("#MasterEmployeeId").prop('disabled', false);
                    $("#MasterEmployeeId").val(_Employee).attr("selected", true);
                }
                else {
                    $("#MasterEmployeeId").prop('disabled', true);
                }
            });
           
        }

        function FillDropdown(selector, json) {
            if (json.length >= 1) {
                $('#' + selector).empty();
                //$('#' + selector).append('<option value=0> -- Select -- </option>');
                json = json || {};

                for (var i = 0; i < json.length; i++) {
                    $('#' + selector).append('<option value="' + json[i].MasterId + '">' + json[i].MasterName + '</option>');
                }
            }
            else {
                $('#' + selector).empty();
                $('#' + selector).append('<option value=0> -- Select -- </option>');
            }

            
        }





    </script>

    <script src="~/js/Views/MasterProduct/Index.js"></script>


