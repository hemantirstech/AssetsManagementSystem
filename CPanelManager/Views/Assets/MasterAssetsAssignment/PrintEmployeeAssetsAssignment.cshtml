@model CPanelManager.ViewModels.MasterAssetsAssignment.IndexMasterAssetsAssignmentViewModel

@{
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
    ViewData["Title"] = "Master Product Assignment";
}

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12" style="text-align:center;">
            <h1 class="page-title txt-color-blueDark">
                Assets Assignment
            </h1>
        </div>
    </div>
    <br /><br />
    
    <div class="row">
        <div class="col-xs-12">

            <table class="table table-bordered" width="100%">
                
                <tbody>

                    @foreach (var Item in Model.AssetsAssignEmployeeList)
                    {
                    <tr>
                        <td style="width:50%;background-color:lightblue;">
                            <b>@Item.EmployeeName</b>
                            <br />@Item.DesignationTitle - (@Item.DepartmentTitle)
                        </td>

                        <td style="width:50%;background-color:deepskyblue">
                            <b>@Item.BranchTitle</b>
                            <br />@Item.CompanyTitle
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <table class="table table-bordered" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand" style="width:40%"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> Product Detail</th>
                                        <th data-class="phone,tablet" style="width:40%"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> Brand & Category</th>
                                        <th data-hide="phone,tablet" style="width:20%;text-align:center;"><i class="fa fa-fw fa-map-marker txt-color-blue hidden-md hidden-sm hidden-xs"></i> Assign Date</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var ItemChild in Model.MasterAssetsAssignmentList.Where(a=>a.MasterEmployeeId==Item.MasterEmployeeId))
                                    {
                                        <tr>
                                            <td>
                                                <b>@ItemChild.ProductTitle</b>
                                                <br /><b>@ItemChild.ProductChildSKU</b>
                                                <br />Sr. No.: @ItemChild.ManufacturerPartNumber
                                            </td>
                                            <td>
                                                Brand: @ItemChild.BrandTitle
                                                <br /> @ItemChild.CategoryTitle / @ItemChild.SubCategoryTitle
                                            </td>
                                            <td style="text-align:center;">
                                                @ItemChild.AssetsAssignmentDate?.ToString("dd-MM-yyyy")

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>








            
        </div>
    </div>
    



</div>






