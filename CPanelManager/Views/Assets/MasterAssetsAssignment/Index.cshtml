@model CPanelManager.ViewModels.MasterAssetsAssignment.IndexMasterAssetsAssignmentViewModel

@{
    ViewData["Title"] = "MasterEmployee";
}

<!-- MAIN CONTENT -->
<div id="content">


    <form asp-action="DeleteMasterEmployee" id="MasterEmployee-form" novalidate="novalidate" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
                <h1 class="page-title txt-color-blueDark">
                    <i class="fa fa-edit fa-fw "></i>
                    Assets Assignment
                    <span>
                        >
                        Index
                    </span>
                </h1>
            </div>
            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8" style="text-align:right;padding-top:10px;">
                <a asp-action="PrintEmployeeAssetsAssignment" class="btn btn-lg btn-labeled btn-default" target="_blank">
                    <span class="btn-label"><i class="glyphicon glyphicon-print"></i></span>Print
                </a>
            </div>
        </div>

       

        <!-- widget grid -->
        <section id="widget-grid" class="">

            <!-- START ROW -->
            <div class="row">

                <!-- NEW COL START -->
                <article class="col-sm-12 col-md-12 col-lg-12">

                    <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-collapsed="false" data-widget-togglebutton="false" data-widget-sortable="false">

                        <header>
                            <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                            <h2>Assets Assignment </h2>

                        </header>

                        <!-- widget div-->
                        <div>

                            <!-- widget edit box -->
                            <div class="jarviswidget-editbox">
                                <!-- This area used as dropdown edit box -->

                            </div>
                            <!-- end widget edit box -->
                            <!-- widget content -->
                            <div class="widget-body no-padding">

                                <table id="dt_basic" class="table table-hover" width="100%">
                                    <thead>
                                        <tr>
                                            <th data-class="expand" style="width:50%"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> Employee</th>
                                            <th data-hide="phone,tablet" style="width:40%"><i class="fa fa-fw fa-calendar txt-color-blue hidden-md hidden-sm hidden-xs"></i> Branch</th>
                                            <th data-hide="phone" style="width:10%;text-align:center;">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var Item in Model.AssetsAssignEmployeeList)
                                        {
                                        <tr>

                                            <td>
                                                <b>@Html.ActionLink(Item.EmployeeName, "ViewMasterAssetsAssignment", new { MasterEmployeeId = Item.MasterEmployeeId, MasterBranchId = Item.MasterBranchId }, htmlAttributes: new { id = "loginLink" })</b>
                                                <br />@Item.DesignationTitle - (@Item.DepartmentTitle)
                                            </td>

                                            <td>
                                                <b>@Item.BranchTitle</b>
                                                <br />@Item.CompanyTitle
                                            </td>
                                           
                                            <td style="text-align:center;">
                                                @Html.ActionLink(".", "ViewMasterAssetsAssignment", new { MasterEmployeeId = Item.MasterEmployeeId, MasterBranchId = Item.MasterBranchId }, htmlAttributes: new { id = "loginLink", @class = "glyphicon glyphicon-pencil", style = "color:blue;font-size:15px;" })

                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                            <!-- end widget content -->

                        </div>
                        <!-- end widget div -->

                    </div>
                    <!-- end widget -->

                </article>
                <!-- END COL -->

            </div>
            <!-- END ROW -->
        </section>
        <!-- end widget grid -->
    </form>
</div>

@section Scripts {

<script type="text/javascript">
   
</script>
    <script src="~/js/Views/MasterEmployee/Index.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



