@model CPanelManager.ViewModels.MasterAssetsAssignment.PrintMasterAssetsAssignmentViewModel

@{
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
    ViewData["Title"] = "Master Product Assignment";
}

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12" style="text-align:center;">
            <h1 class="page-title txt-color-blueDark">
                Assets Assignment Acknowledgement
            </h1>
        </div>
    </div>
    <br /><br />
    <div class="row">
        <div class="col-xs-12">
            <span>List of assign assets to @Model.AssetsAssignEmployee.EmployeeName </span>
            <br />
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <table class="table table-bordered" width="100%">
                <thead>
                    <tr>
                        <th data-class="expand" style="width:35%"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> Product Detail</th>
                        <th data-class="phone,tablet" style="width:35%"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> Brand & Category</th>
                        <th data-hide="phone,tablet" style="width:20%;text-align:center;"><i class="fa fa-fw fa-map-marker txt-color-blue hidden-md hidden-sm hidden-xs"></i> Assign Date</th>
                        <th data-hide="phone,tablet" style="width:10%;text-align:center;"><i class="fa fa-fw fa-map-marker txt-color-blue hidden-md hidden-sm hidden-xs"></i> Cost</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var Item in Model.MasterAssetsAssignmentList)
                    {
                    <tr>
                        <td>
                            <b>@Html.ActionLink(Item.ProductTitle, "ViewMasterProduct", "MasterProduct", new { MasterProductId = Item.MasterProductId }, htmlAttributes: new { id = "loginLink" })</b>
                            <br /><b>@Html.ActionLink(Item.ProductChildSKU, "ViewMasterProductChild", "MasterProduct", new { MasterProductChildId = Item.MasterProductChildId }, htmlAttributes: new { id = "loginLink" })</b>
                            <br />Sr. No.: @Item.ManufacturerPartNumber
                        </td>
                        <td>
                            Brand: @Item.BrandTitle
                            <br /> @Item.CategoryTitle / @Item.SubCategoryTitle
                        </td>
                        <td style="text-align:center;">
                            @Item.AssetsAssignmentDate?.ToString("dd-MM-yyyy")

                        </td>
                        <td style="text-align:center;">
                            @Item.PurchasePrice

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <br />
            <span>I hereby acknowledge receipt of above mention assets. </span>
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12" style="text-align:right;">
            <br />
            <span>Signature </span>
            <br />
            <br />
            <br />
            <br />
            <span>@Model.AssetsAssignEmployee.EmployeeName<br />@Model.AssetsAssignEmployee.DesignationTitle - (@Model.AssetsAssignEmployee.DepartmentTitle)<br />@Model.AssetsAssignEmployee.CompanyTitle<br />@Model.AssetsAssignEmployee.BranchTitle<br />@Model.AssetsAssignEmployee.MobileNumber<br />@Model.AssetsAssignEmployee.Email</span>
            <br />
            <br />
            <br />
        </div>
    </div>



</div>






