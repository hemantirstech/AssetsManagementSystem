@model CPanelManager.ViewModels.ProfileTaskMapping.IndexProfileTaskMappingViewModel

@{
    ViewData["Title"] = "MasterProfile/Index";
}

<!-- MAIN CONTENT -->
<div id="content">


    <form asp-action="" id="MasterProfile-form" novalidate="novalidate" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
                <h1 class="page-title txt-color-blueDark">
                    <i class="fa fa-edit fa-fw "></i>
                    Profile Task Mapping
                    <span>
                        >
                        Index
                    </span>
                </h1>
            </div>
            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8" style="text-align:right;padding-top:10px;">
                
            </div>
        </div>

        <!-- widget grid -->
        <section id="widget-grid" class="">

            <!-- START ROW -->
            <div class="row">

                <!-- NEW COL START -->
                <article class="col-sm-12 col-md-12 col-lg-12">

                    <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-collapsed="false" data-widget-togglebutton="false" data-widget-sortable="false">

                        <header>
                            <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                            <h2>Profile Task Mapping </h2>

                        </header>

                        <!-- widget div-->
                        <div>

                            <!-- widget edit box -->
                            <div class="jarviswidget-editbox">
                                <!-- This area used as dropdown edit box -->

                            </div>
                            <!-- end widget edit box -->
                            <!-- widget content -->
                            <div class="widget-body no-padding">

                                <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                    <thead>
                                        <tr>
                                            
                                            <th data-hide="phone" style="width:52%"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> Profile Name</th>
                                            <th data-hide="phone,tablet" style="width:10%; text-align:center;"><i class="fa fa-fw fa-map-marker txt-color-blue hidden-md hidden-sm hidden-xs"></i> Select</th>
                                            <th data-hide="phone,tablet" style="width:10%; text-align:center;"><i class="fa fa-fw fa-map-marker txt-color-blue hidden-md hidden-sm hidden-xs"></i> Insert</th>
                                            <th data-hide="phone,tablet" style="width:10%; text-align:center;"><i class="fa fa-fw fa-map-marker txt-color-blue hidden-md hidden-sm hidden-xs"></i> Update</th>
                                            <th data-hide="phone,tablet" style="width:10%; text-align:center;"><i class="fa fa-fw fa-map-marker txt-color-blue hidden-md hidden-sm hidden-xs"></i> Delete</th>
                                            <th data-hide="phone" style="width:8%;text-align:center;">Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var Item in Model.MasterProfileViewModelList)
                                        {
                                        <tr>
                                            
                                            @if (Model.IsUpdate == true)
                                            {
                                                <td>
                                                    @Html.ActionLink(Item.ProfileTitle, "ViewProfileTaskMapping", new { MasterProfileId = Item.MasterProfileId }, htmlAttributes: new { id = "loginLink" })
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    @Html.ActionLink(Item.ProfileTitle, "ViewProfileTaskMapping", new { MasterProfileId = Item.MasterProfileId }, htmlAttributes: new { id = "loginLink" })
                                                </td>
                                            }

                                            <td style="text-align:center;">
                                                <span class="@Item.SelectIcon" style="color:@Item.SelectColor"></span>
                                            </td>
                                            <td style="text-align:center;">
                                                <span class="@Item.InsertIcon" style="color:@Item.InsertColor"></span>
                                            </td>
                                            <td style="text-align:center;">
                                                <span class="@Item.UpdateIcon" style="color:@Item.UpdateColor"></span>
                                            </td>
                                            <td style="text-align:center;">
                                                <span class="@Item.DeleteIcon" style="color:@Item.DeleteColor"></span>
                                            </td>
                                            <td style="text-align:center;">
                                                @Html.ActionLink(".", "ViewProfileTaskMapping", new { MasterProfileId = Item.MasterProfileId }, htmlAttributes: new { id = "loginLink", @class = "glyphicon glyphicon-pencil", style = "color:blue;font-size:15px;" })

                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                            <!-- end widget content -->

                        </div>
                        <!-- end widget div -->

                    </div>
                    <!-- end widget -->

                </article>
                <!-- END COL -->

            </div>
            <!-- END ROW -->
        </section>
        <!-- end widget grid -->
    </form>
</div>

@section Scripts {


    <script src="~/js/Views/ProfileTaskMapping/Index.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



