@model CPanelManager.ViewModels.MasterLogin.IndexMasterLoginViewModel

@{
    ViewData["Title"] = "MasterLogin/Index";
}

<!-- MAIN CONTENT -->
<div id="content">


    <form asp-action="DeleteMasterLogin" id="MasterLogin-form" novalidate="novalidate" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
                <h1 class="page-title txt-color-blueDark">
                    <i class="fa fa-edit fa-fw "></i>
                    Function
                    <span>
                        >
                        Index
                    </span>
                </h1>
            </div>
            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8" style="text-align:right;padding-top:10px;">
                <button id="btndelete" type="submit" class="btn btn-lg btn-labeled btn-danger" onclick="return confirm('Are you sure you wish to delete Master Login?');">
                    <span class="btn-label"><i class="glyphicon glyphicon-trash"></i></span>Delete
                </button>

                <a asp-action="AddMasterEmployee" asp-controller="MasterEmployee" class="btn btn-lg btn-labeled btn-primary">
                    <span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span>Add New
                </a>
            </div>
        </div>

       

        <!-- widget grid -->
        <section id="widget-grid" class="">

            <!-- START ROW -->
            <div class="row">

                <!-- NEW COL START -->
                <article class="col-sm-12 col-md-12 col-lg-12">

                    <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-collapsed="false" data-widget-togglebutton="false" data-widget-sortable="false">

                        <header>
                            <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                            <h2>MasterLogin </h2>

                        </header>

                        <!-- widget div-->
                        <div>

                            <!-- widget edit box -->
                            <div class="jarviswidget-editbox">
                                <!-- This area used as dropdown edit box -->

                            </div>
                            <!-- end widget edit box -->
                            <!-- widget content -->
                            <div class="widget-body no-padding">

                                <table id="dt_basic" class="table table-hover" width="100%">
                                    <thead>
                                        <tr>
                                            @*<th data-hide="phone" style="width:5%"><input style="width:100% !important; text-align:center;" type="checkbox" class="checkBoxDelete" id="chkbtnDeleteAll" /> </th>*@
                                            <th data-class="expand" style="width:35%"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> Name</th>
                                            <th data-class="expand" style="width:35%"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> UserName</th>
                                            <th data-hide="phone,tablet" style="width:10%"><i class="fa fa-fw fa-calendar txt-color-blue hidden-md hidden-sm hidden-xs"></i> IsVerified</th>
                                            <th data-hide="phone,tablet" style="width:10%; text-align:center;"><i class="fa fa-fw fa-map-marker txt-color-blue hidden-md hidden-sm hidden-xs"></i> Active</th>
                                            <th data-hide="phone" style="width:10%;text-align:center;">Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var Item in Model.MasterLoginList)
                                        {
                                        <tr>
                                            @*<td style="text-align:center;"><input style="float:inherit;" type="checkbox" id="chkbtnDeleteMasterLoginIds" class="checkBoxDelete" name="DeleteMasterLoginIds" value="@Item.MasterLoginId"> </td>*@

                                            @if (Model.IsUpdate == true)
                                            {
                                                <td>
                                                    <b>@Html.ActionLink(Item.RegistrationTitle, "ViewMasterLogin", new { MasterLoginId = Item.MasterLoginId }, htmlAttributes: new { id = "loginLink" })</b>
                                                    <br />@Item.DesignationTitle - (@Item.DepartmentTitle)
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <b>@Html.ActionLink(Item.RegistrationTitle, "ViewMasterLogin", new { MasterLoginId = Item.MasterLoginId }, htmlAttributes: new { id = "loginLink" })</b>
                                                    <br />@Item.DesignationTitle-(@Item.DepartmentTitle)
                                                </td>
                                            }

                                            @if (Model.IsUpdate == true)
                                            {
                                                <td>
                                                    <b>@Html.ActionLink(Item.UserName, "ViewMasterLogin", new { MasterLoginId = Item.MasterLoginId }, htmlAttributes: new { id = "loginLink" })</b>
                                                    <br />@Item.RegistrationTypeTitle
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <b>@Html.ActionLink(Item.UserName, "ViewMasterLogin", new { MasterLoginId = Item.MasterLoginId }, htmlAttributes: new { id = "loginLink" })</b>
                                                    <br />@Item.RegistrationTypeTitle
                                                </td>
                                            }

                                            
                                            <td style="text-align:center;">
                                                @if (Item.IsVerified == true)
                                                {
                                                    <span class="glyphicon glyphicon-ok" style="color:green"></span>
                                                }
                                                else
                                                {
                                                    <span class="glyphicon glyphicon-remove" style="color:red"></span>
                                                }
                                            </td>
                                            <td style="text-align:center;">
                                                @if (Item.IsActive == true)
                                                {
                                                    <span class="glyphicon glyphicon-ok" style="color:green"></span>
                                                }
                                                else
                                                {
                                                    <span class="glyphicon glyphicon-remove" style="color:red"></span>
                                                }
                                            </td>
                                            <td style="text-align:center;">
                                                @Html.ActionLink(".", "ViewMasterLogin", new { MasterLoginId = Item.MasterLoginId }, htmlAttributes: new { id = "loginLink", @class = "glyphicon glyphicon-pencil", style = "color:blue;font-size:15px;" })

                                                @Html.ActionLink(".", "DeleteMasterLoginById", new { MasterLoginId = Item.MasterLoginId }, htmlAttributes: new { id = "loginLink", @class = "glyphicon glyphicon-trash", style = "color:red;font-size:15px;" , onclick = "return confirm('Are you sure you wish to delete Master Login?');" })

                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                            <!-- end widget content -->

                        </div>
                        <!-- end widget div -->

                    </div>
                    <!-- end widget -->

                </article>
                <!-- END COL -->

            </div>
            <!-- END ROW -->
        </section>
        <!-- end widget grid -->
    </form>
</div>

@section Scripts {

<script type="text/javascript">
    $(document).ready(function () {
        //Check Btn On Index View  for Select all check boxs for Delete
        $("#chkbtnDeleteAll").click(function () {
            $(".checkBoxDelete").prop('checked', $(this).prop('checked'));
        });
    });
</script>
    <script src="~/js/Views/MasterLogin/Index.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



